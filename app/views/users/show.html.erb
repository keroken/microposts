<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, readonly: true %>

      <%= f.label :email %>
      <%= f.text_field :email, readonly: true %>
      
      <%= f.label :location %>
      <%= f.text_field :location, readonly: true %>
      
      <%= f.label :age %>
      <%= f.number_field :age, readonly: true %>

      <%= link_to "Edit my profile", edit_user_path(@user), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>