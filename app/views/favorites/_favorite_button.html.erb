<% if micropost.favorite_for current_user %>
    <%= link_to "Favorite", micropost_favorite_path(micropost_id: micropost), method: :delete, remote: true, class: 'btn btn-xs btn-warning' %>
<% else %>
    <%= link_to "Favorite", micropost_favorite_path(micropost_id: micropost), method: :post, remote: true, class: 'btn btn-xs btn-default' %>
<% end %>